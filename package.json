{
  "name": "HuelPicker",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "npm run lint && ./node_modules/.bin/babel src --out-dir build && shx rm -rf build/templates && shx cp -r src/templates build",
    "lint": "eslint src/ --ext .js",
    "start": "npm run-script build && node build/app.js",
    "updateReadme": "npm run-script build && node build/scripts/updateReadme.js",
    "deploy": "sudo ./node_modules/noodle-deploy/build/index.js -p HuelPicker -t build/app.js"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.4",
    "@babel/core": "^7.10.4",
    "@babel/preset-env": "^7.10.4",
    "eslint": "^7.4.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-plugin-import": "^2.22.0",
    "husky": "^4.2.5",
    "shx": "^0.3.2"
  },
  "dependencies": {
    "@babel/polyfill": "^7.10.4",
    "core-js": "^3.6.5",
    "ejs": "^3.1.3",
    "fs": "0.0.1-security",
    "node-schedule": "^1.3.2",
    "noodle-email": "^1.0.0",
    "util": "^0.12.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run updateReadme && git add README.md"
    }
  }
}
