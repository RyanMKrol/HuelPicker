sudo apt update;
sudo apt -y install curl dirmngr apt-transport-https lsb-release ca-certificates;
curl -sL https://deb.nodesource.com/setup_12.x | sudo -E bash -;

sudo apt -y install nodejs;

echo "Announcing version of Nodejs";
nodejs -v;

echo "Announcing version of npm";
npm -v;

echo "Announcing version of Node";
node -v;

echo "Attempting to install noodle-deploy";
npm install noodle-deploy;

echo "Now Trying to use noodle-deploy";
sudo node ./node_modules/noodle-deploy/build/index.js -s $AES_PASS -p HuelPicker -t "build/app.js";
